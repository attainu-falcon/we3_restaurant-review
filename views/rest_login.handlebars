<div class="container">
    <div class="row ">
        <div class="col-sm-6 col-md-4 col-md-offset-4 bg-light text-dark">
            <h2 class="text-center login-title">Login for Resturant</h2>
                    {{#if sucess}}
            <div class="alert alert-success text-center">
  <strong>{{sucess}}</strong>
</div>
     {{/if}}  
            {{#if error}}
            <div class="alert alert-danger">
  <strong>{{error}}</strong>
</div>
     {{/if}}      
          
                
                <form class="form-signin" method="POST" action="/resturant/auth">
                <input name="email" type="email" class="form-control" placeholder="Email" required autofocus>

                <input name="password" type="password" class="form-control" placeholder="Password" required>
                <button class="btn btn-lg btn-primary btn-block" type="submit">
                    Sign in</button>

                </form>
            
            <a href="/resturant/signup" class="text-center new-account">Don't have an account </a>
        </div>
    </div>
</div>

</body>